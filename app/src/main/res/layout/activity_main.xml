<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.MainActivity"
    android:background="@color/bb2">
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:justifyContent="space_between"
        app:alignItems="center"
        android:padding="10dp"
        android:background="@color/oo"
        android:elevation="6dp"
        android:id="@+id/barrasup"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icono"
            android:id="@+id/acercade"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bienvenido"
            android:textSize="20sp"
            android:textColor="@color/bb"
            android:id="@+id/nombreusuario"
            android:textAlignment="center"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icono"
            android:id="@+id/avatar"/>
    </com.google.android.flexbox.FlexboxLayout>
    <fragment
        android:id="@+id/MainRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/barrasup"
        android:background="@drawable/degradado_oc_on"
        android:name="androidx.navigation.fragment.NavHostFragment"
        app:navGraph="@navigation/navgrap"
        app:defaultNavHost="true"
        />
</RelativeLayout>